<h2>Search Room</h2>

<%= form_for (@room), :url => { :action => "custom_update" } do  |f| %>

    <!-- <div class="field">
      <%= f.label :number %>
    <%= f.text_field :number %>
    </div>-->

    <div class="field">
      <%= f.label :size %>
      <%= f.select "size", options_for_select([["Small" , "Small" ],["Medium" , "Medium" ],["Large" , "Large" ]]) %>
    </div>

    <div class="field">
      <%= f.label :building %>
      <%= f.select "building", options_for_select([["Hunt Library" , "Hunt Library" ],["D.H. Hill" , "D.H. Hill" ]]) %>
    </div>

    <div class="field">
      <%= f.label :status %>
      <%= f.select "status", options_for_select([["Available" , "1" ],["Booked" , "0" ]]) %>
    </div>

    <div class="actions">
      <%= f.submit 'Search' %>
    </div>

    <hr>
    <h3>Room Status:</h3><legend>(Refresh this page if you don't see the room schedule!)</legend>
    <br>
    <div id="calendar"></div>
    <br>
    <hr>
    <h3>
      <%= link_to 'Book Room', new_reservation_bookings_url %><br>
    </h3>
<% end %>